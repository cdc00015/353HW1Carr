@page
@model _353HW1Carr.Pages.playerDetailsModel
@{
    var playerID = HttpContext.Request.Query["playerID"];
}

<div class="flexing2">
    <img class="image float-end" src="Football Pick.png" alt="Picture of Football" />
    <div>
        <h1 id="playerName" style="visibility: hidden;"></h1>
        <div class="flexing2">
            <h2 id="college" style="visibility: hidden;"></h2>
            <div>
                <p>Height:<div id="height" style="visibility: hidden;"></div></p>
                <p>Weight:<div id="weight" style="visibility: hidden;"></div></p>
            </div>
        </div>
        <h2 id="college" style="visibility: hidden;"></h2>
    </div>
    <div id="jerseyNum" style="visibility: hidden;" class="PlayerNumber"></div>
</div>

<table>
    <thread>
        <tr>
            <td><strong>Year</strong></td>
            <td><strong>Yards</strong></td>
            <td><strong>TDs</strong></td>
            <td><strong>Int</strong></td>
            <td><strong>Completions</strong></td>
        </tr>
    </thread>
    <tbody>
        <tr>
            <td>2023</td>
            <td id="yards" style="visibility: hidden;"></td>
            <td id="tDs" style="visibility: hidden;"></td>
            <td id="inTs" style="visibility: hidden;"></td>
            <td id="completions" style="visibility: hidden;"></td>
        </tr>
    </tbody>
</table>

<button type="button" onclick="var elem = document.getElementById('jlStats'); if (elem.style.display === 'block') {elem.style.display = 'none';} else {elem.style.display = 'block';}">More Stats!</button>
<table id="jlStats" style="display: none; width: 100%;">
    <thread>
        <tr>
            <td><strong>Team</strong></td>
            <td><strong>Year</strong></td>
            <td><strong>Att</strong></td>
            <td><strong>Comp</strong></td>
            <td><strong>Pct</strong></td>
            <td><strong>YPA</strong></td>
        </tr>
    </thread>
    <tbody>
        <tr>
            <td>GB</td>
            <td>2023</td>
            <td>579</td>
            <td>372</td>
            <td>64.2</td>
            <td>7.2</td>
        </tr>
        <tr>
            <td>GB</td>
            <td>2022</td>
            <td>21</td>
            <td>14</td>
            <td>66.7</td>
            <td>9.3</td>
        </tr>
        <tr>
            <td>GB</td>
            <td>2021</td>
            <td>62</td>
            <td>36</td>
            <td>58.1</td>
            <td>6.6</td>
        </tr>
    </tbody>
</table>



<div>
    <h2>Try Another Player?</h2>
    <a href="index">
        <strong><em>Back to Search</em></strong>
    </a>
</div>

